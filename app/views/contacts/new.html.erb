<% provide(:title, "お問い合わせ") %>
<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">こちらからお問い合わせが出来ます。</div>
      <div class="card-body">
        <%= form_with model: @contact do |f| %>
      <div class="col-auto">
      
        <%= f.label :name, "お名前"%>
        <span class="must">必須</span>
        <%= f.text_field :name ,placeholder: "例）山田太郎", class: "form-control" %>
      </div>
      <div class="col-auto">   
        <%= f.label :email, "メールアドレス"%>
        <span class="must">必須</span>
        <%= f.email_field :email ,placeholder: "例）abc@example.com", class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= f.label :contents, "お問い合わせ内容" %>
        <span class="must">必須</span>
        <%= f.text_area :contents,placeholder: "例）登録後、ログインができません。", class: "form-control"%>
      </div>
      <div class = "form-group text-center">
        <%=simple_format(@contacts)%>
        <%= f.submit "送信", method: :post,class: "btn btn-dark btn-lg" %>
      </div>
        <% end %>
      </div>
  </div>
</div>
