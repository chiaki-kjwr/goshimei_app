<% provide(:title, "マイページ") %>
<div class="profile-wrap">

<div class="container">
  <div class="row border">
    <div class="col-md-5 text-center">

      <%= image_tag @user.profile_photo.url(:thumb),class:"round-img"%>

    </div>
    <div class="col-md-7">
            <h1><%= @user.name %></h1>
            <p>メールアドレス : <%= @user.email %></p>
              <p>経歴 : <%= @user.profile %></p>
 <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-outline-dark common-btn edit-profile-btn" %>
              <%= link_to "退会する", "/users/#{@user.id}", method: :delete,data:{confirm: "本当に退会しますか？"},class: "btn btn-outline-dark common-btn edit-profile-btn" %>
               <%= link_to "戻る", root_path, class: "btn btn-outline-dark common-btn edit-profile-btn"%>
              </div>
            </div>
          </%div>

    </div>
  </div>
</div>
</div>