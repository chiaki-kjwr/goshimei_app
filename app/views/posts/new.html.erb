<% provide(:title, "ボシュウ作成") %>
<div class="d-flex flex-column align-items-center mt-3">

  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
    　　ボシュウする
      </div>
      <div class="card-body">
        <%= form_with model: @post do |f| %>
          <div class="form-group row mt-2">
            <%#div class="col-auto ">
              <%#= image_tag avatar_url(current_user), class: "post-profile-icon" %>
            <%#div%>
            <div class="col-auto "> 
            <%= f.label :title,"ボシュウのタイトル"%>
            <%= f.text_field :title, class: "form-control border-0", placeholder: "ボシュウ内容" %>
              </div>
            <div class="col">
            <%= f.label :contents,"詳細"%>
            <%= f.text_area :contents, class: "form-control border-0", placeholder: "詳細" %>
            </div>
            
            <%= f.submit "ボシュウする", class: "btn btn-dark btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>