<h1>チャットサンプル</h1>
<% if user_signed_in? %>
  <h3><%#@user.name %>とのチャットルーム</h3>
  <div class="chat-field">
    <% if @messages.present?  %>
      <!-- メッセージがUserによるものだったら -->
      
        <!-- メッセージを右に寄せる -->
        <div class="right-message">
          <%= m.content %>
        </div>
      <!-- メッセージがShopによるものだったら -->
      <%#% else %>
        <!-- メッセージを左に寄せる -->
        <%#iv class="left-message">
          <%= m.content %>
    <% end %>
  </div>
<% end %>

<%#= form_for [@chat_room,@chat_messages] do |f| %>
  <%#= f.text_field :content %>
  <%#= f.submit "メッセージを送る"%>
<%# end %>