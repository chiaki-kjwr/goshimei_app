<% provide(:full_title, "アカウント編集") %>
  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <%= "#{@company.name}のアカウント編集" %>
    </div>
    <div class="image text-center">
    <%= image_tag @company.profile_photo.url,class: "rounded-circle",size:"150x150"%>
    </div>
    <div class="card-body-user-edit">
      <%= form_with(model: @company, local: true) do |f| %>

      <div class="col-auto">
        <i class="fas fa-user"></i>
        <%= f.label :name, "お名前" %>
        <%= f.text_field :name ,placeholder: "例）山田太郎", class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="fas fa-building"></i>
        <%= f.label :corporation_name,"在籍企業名" %> <br>
        <%= f.text_field :corporation_name, autofocus: true, autocomplete: "corporation_name",class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="far fa-envelope"></i>
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email ,placeholder: "例）abe@example.com", class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="far fa-id-card"></i>
        <%= f.label :profile,"経歴" %> <br>
        <%= f.text_area :profile, autofocus: true, autocomplete: "profile",class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="fas fa-copy"></i>
        <%= f.label :industry,"担当業界" %> <br>
        <%= f.text_field :industry, autofocus: true, autocomplete: "industry",class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="fas fa-users-cog"></i>
        <%= f.label :occupation,"担当職種" %> <br>
        <%= f.text_field :occupation, autofocus: true, autocomplete: "occupation",class: "form-control" %>
      </div>

      <div class="col-auto">
        <i class="fas fa-image"></i>
        <%= f.label :profile_photo,"プロフィール写真" %>
        <br><%= f.file_field :profile_photo,id:"fileName"%>
        <input id="dummy_file" type="text" >
        <label for="fileName" >
        <span class="browse_btn">ファイルを選択</span><input type="file"id="fileName">
        </label>
        <%= f.hidden_field :profile_photo_cache %>
      </div>

      <div class="actions text-center">
        <%= f.submit "変更する",class:"btn btn-facebook btn-block ",method: :post %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
<%= link_to "<<プロフィールページへ戻る",company_path(@company),:style=>"color:black;" %>
