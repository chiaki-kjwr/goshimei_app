<% provide(:title, "アカウント編集") %>

<div class="d-flex flex-column align-items-center mt-3">

  < class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        <%= "#{@company.name}のアカウント編集 "%>
      </div>

<%= image_tag @company.profile_photo.url(:thumb),class: "round-img"%>
<!--body-->
<div class="card-body">
   <%#= form_with scope: resource, as: resource_name, url: registration_path(resource_name),
    local: true, method: :patch do |f| %>
    <%= form_with(model: @company, local: true) do |f| %>

    <div class="col-auto">    
      <%= f.label :name, "お名前"%>
      <%= f.text_field :name ,placeholder: "例）山田太郎", class: "form-control" %>
    </div>

    <div class="col-auto">   
      <%= f.label :email, "メールアドレス"%>
      <%= f.email_field :email ,placeholder: "例）abe@example.com", class: "form-control" %>
    </div>

    <div class="col-auto">
      <%= f.label :profile,"経歴" %> <br />
      <%= f.text_area :profile, autofocus: true, autocomplete: "profile",class: "form-control"%>
    </div>

    <div class="col-auto">
      <%= f.label :profile_photo %>
      <%= f.file_field :profile_photo %>
      <%= f.hidden_field :profile_photo_cache %>
    </div>

    <div class="actions text-center">
      <%= f.submit "変更する",class:"btn btn-dark btn-lg",method: :post%>
    </div>
 <% end %>
    
   </div>
 </div>
</div>

</div>

<%= link_to "戻る",company_path(@company)%>
