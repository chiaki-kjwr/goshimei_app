<% provide(:full_title, "エージェント登録画面") %>
<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
  <div class="card card-signin my-5" id="userSignin">
    <div class="card-body-user">
      <h5 class="card-title text-center"><i class="far fa-id-card"></i>エージェント 新規登録画面</h5>
      <p>登録してボシュウしよう</p>
      <%= form_with model: @company do |f| %>
        <div class="form-group">
          <div class="col-auto">
            <i class="far fa-envelope"></i>
            <%= f.label :email,"メールアドレス" %>
            <span class="must">必須</span>
            <%= f.email_field :email, placeholder: "例）abc@example.com", class: "form-control",autofocus: true, autocomplete: "email" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-user-tie"></i>
            <%= f.label :name,"お名前" %>
            <span class="must">必須</span>
            <%= f.text_field :name, placeholder: "例）山田太郎", class: "form-control",autofocus: true, autocomplete: "name" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-key"></i>
            <%= f.label :password,"パスワード"%>
            <span class="must">必須</span>
            <%= f.password_field :password ,placeholder: "例）XXXXXX",class: "form-control" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-key"></i>
              <%= f.label :password_confirmation, "パスワード（確認）" %>
              <span class="must">必須</span>
              <%= f.password_field :password_confirmation, placeholder: "例）XXXXXX",class: "form-control" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-building"></i>
              <%= f.label :corporation_name, "在籍企業名" %>
              <%= f.text_field :corporation_name ,placeholder: "例）ゴシメイ株式会社", class: "form-control" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-copy"></i>
              <%= f.label :industory, "担当業界" %>
              <%= f.text_field :industory,placeholder: "例）製薬メーカー", class: "form-control" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-users-cog"></i>
              <%= f.label :occupation, "担当職種" %>
              <%= f.text_field :occupation ,placeholder: "例）MR", class: "form-control" %>
          </div>

          <div class="col-auto">
            <i class="fas fa-edit"></i>
              <%= f.label :profile,"経歴" %> <br>
              <%= f.text_area :profile, autofocus: true, autocomplete: "profile",placeholder:"例)●●●●",class: "form-control" %>
          </div>

          <div class="col-auto">
            <span class="must">必須</span>
            <i class="fas fa-image"></i>
              <%= f.label :profile_photo,"プロフィール写真" %><br>
              <%= f.file_field :profile_photo, autofocus: true, autocomplete: "profile_photo" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "登録する", class: "btn btn-lg btn-facebook btn-block" %>
          </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
