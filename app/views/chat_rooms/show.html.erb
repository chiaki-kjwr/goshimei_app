<% provide(:full_title, "チャット詳細") %>
<%#div class="row"%>

<div class="col-xs-10 chatPage">
  <header class="header text-center">
<% if user_signed_in? %>
  <h3><%= @chat_room.company.name %>とのチャットルーム</h3>
  <div class="chatPartner">
    <%= @chat_room.user.name %>
    </div>
  </header>

  <%#div class="container"%>
 <div class="row">
  <div class="col-xs-12 messagesArea messages">
      <%#= render @chat_messages %>
<% if @chat_messages.present? %>
    <% @chat_messages.each do |m| %>

          <div class="col-xs-7 text-right alert alert-success">


          <%#p class="alert alert-success"%>
          <%= m.message %>
          <br><br>

           <div class="col-xs-4">
          <small><strong><a href="/users/<%= @chat_room.user_id %>"><%=  @chat_room.user.name %></a></strong></small>
         <%= image_tag @chat_room.user.profile_photo.url(:thumb),class:"round-img" %>

 </div>
 </div>
 </div>
          </div>
        <% else %>
          <h4 class="text-left">
          <p class="alert alert-info">
          <%= m.message %>
          <br><br>
          <small><strong><a href=""<%= @chat_room.company_id %>"><%= @chat_room.company.name %>>さん</a></strong></small>
          </p>
          </h4>
        <% end %>
      <% end %>
    <% else %>
      <br>
      <h3 class="text-center">メッセージはまだありません</h3>
      <br>
    <% end %>
</div>


      <%#= render "chat_messages/chat_message" %>
    </div>
  </div>

  </div>


  <form class="messageInputForm">
    <div class='container'>
     <%#= form_for @chat_message do |f| %>
     <%= form_with(model: @chat_message ,url:chat_room_path,local:true,method: :post) do |f| %>
      <%= f.label :message %>
     <%= f.text_field :message, :class => "form-control myform", :placeholder => "メッセージを入力して下さい" %>
<%= f.hidden_field :chat_room_id, :value => "@chat_room.id" %>
<br>
      <div class="text-center">
        <%= f.submit "チャットを送る", :class => "btn btn-primary",method: :post %>

      </div>
    <% end %>

    </div>
  </form>
</div>
