                <%= image_tag @chat_room.company.profile_photo.url,class:"rounded-circle",size:"75x75"%>
              </div>
              <div class="col-xs-12 col-sm-10 col-md-4">
                <h4><%= m.message %></h4>
                <div class="chat-date">
                  <small><strong><%= m.created_at.to_s(:jptime) %></strong></small>
                </div>
              </div>
            </div>
 <%# ユーザーの条件 %>
            <% elsif m.is_user = true %>
              <p>ユーザーのメッセージ</p>
