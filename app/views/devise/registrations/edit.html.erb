 <% provide(:title, "アカウント編集") %>
 

 <div class="col-md-offset-2 mb-4 edit-profile-wrapper">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
      
      <div class="form-group text-center">

    <h1>Edit <%= resource_name.to_s.humanize %></h1>

  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
  <%= f.label :sex %><br />
  <%= f.text_field :sex, autofocus: true, autocomplete: "sex" %>
  </div>

  <div class="field">
  <%= f.label :age %><br />
  <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <%# プロフィールフォトを編集できるようにする%>
  
    <%#= f.label :profile_photo %><br />
    <%#= f.field :profile_photo, autofocus: true, autocomplete: "profile_photo" %>
  <div class="field">
    <%= f.label :profile %> 
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%#h3>サービスを退会する</%#h3>
 <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  <%= link_to "戻る", :back %>
</div>
