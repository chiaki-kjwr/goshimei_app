 <% provide(:title, "アカウント編集") %>
 

 <div class="edit-profile-wrapper text-center">
  <div class="row">
    <%#div class="col-md-8 mx-auto"%>
      <div class="profile-form-wrap">
        <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
      
      <%#div class="form-group text-center"%>

    <%= "#{@user.name}のアカウント編集 "%><%#= resource_name.to_s.humanize %>

<%if @user.profile_photo.nil?%>
  <%= image_tag avatar_url(@user), class: "round-img" %>
  <%else%>
  <%= image_tag @user.profile_photo.url(:thumb),class: "round-img"%>
<%end %>

  <div class="form-group">
  <%= f.label :name,"お名前" %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
  <%= f.label :性別 %><br />
  <%= f.text_field :sex, autofocus: true, autocomplete: "sex" %>
  </div>

  <div class="form-group">
  <%= f.label :年齢%><br />
  <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password,"新しいパスワード" %> <i></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <!--<em><%= @minimum_password_length %> 文字以上</em>-->
    <% end %>
  </div>


  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <%# プロフィールフォトを編集できるようにする%>
  
    <%#= f.label :profile_photo %><br />
    <%#= f.field :profile_photo, autofocus: true, autocomplete: "profile_photo" %>
  <div class="form-group">
    <%= f.label :profile,"経歴" %> <br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %>
    <%= f.hidden_field :profile_photo_cache %>
  </div>

  <div class="actions">
    <%= f.submit "変更する",class:"btn btn-dark btn-lg",method: :post%>
  </div>
<% end %>


  <%= link_to "戻る",user_path(@user)%>

